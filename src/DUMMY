from distutils.log import info


Alice -> Sælger: Hej! Jeg vil gerne købe "Det forsømte forår"
Sælger -> Alice: Ok, den koster 799
Alice -> Bob: Den er dyr. 799
Bob -> Alice: Det har vi råd til. Lad os købe
Alice -> Sælger: Vi køber, her er vores info

Alice ::=
    Send[BookTitle, Seller, Recv[Price, Seller, Send[Question, Bob, Recv[Answer, Bob, Choose[Send[CreditCard, Seller, End], Send[Sorry, Seller, End]]]]]]

Bob ::=
    Recv[Question, Alice, Send[Answer, End]]

Seller ::=
    Recv[BookTitle, Alice, Send[Price, Alice, Offer[Recv[CreditCard, Alice, End], Recv[Sorry, Alice, End]]]]




    
global protocol BuyerSeller(role B1, role B2, role Seller) {
    Prompt(Message) from B1 to Seller;
    Answer(Message) from Seller to B1;
    Prompt(Message) from Seller to B2;
    Quotation(Price) from B1 to B2;

    choice from B2 to Seller {
        Response(Message) from B2 to B1;
        End;
    } or {
        End;
    }
}